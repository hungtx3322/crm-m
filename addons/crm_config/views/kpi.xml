<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="kpi_list_view_tree" model="ir.ui.view">
            <field name="name">conf_kpi_view_tree</field>
            <field name="model">dec.kpi</field>
            <field name="arch" type="xml">
                <list string="dec_kpi_list" editable="bottom">
                    <field name="user_id"/>
                    <field name="dec_type"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="dec_number"/>
                    <field name="res_number"/>
                    <field name="is_complete"/>
                </list>
            </field>
        </record>
        <record id="kpi_list_action" model="ir.actions.act_window">
            <field name="name">KPI</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dec.kpi</field>
            <field name="view_mode">list</field>
        </record>

        <menuitem id="menu_kpi_list" name="KPI"
                  action="kpi_list_action" sequence="5"/>


    </data>
</odoo>