<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inh_crm_lead_view_form" model="ir.ui.view">
            <field name="name">crm.lead</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="is_potential"/>
                </xpath>

                <xpath expr="//notebook/page[@name='lead']//field[@name='partner_name']" position="after">
                    <field name="business_type"/>
                    <field name="manufacturing_industry_id"/>
                </xpath>
                <xpath expr="//notebook/page[@name='internal_notes']//field[@name='description']" position="before">
                    <group>
                        <group>
                            <field name="lead_code"/>
                            <field name="approach_date"/>

                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="required_tonnage"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//field[@name='partner_name']" position="after">
                    <field name="business_type"/>
                    <field name="manufacturing_industry_id"/>
                </xpath>

                <xpath expr="//notebook/page[@name='extra']" position="after">

                    <page string="Lịch sử đơn hàng">
                        <field name="sorder_line_ids">
                            <list redonly="1">
                                <field name="x_name_so"/>
                                <field name="x_quotation_date"/>
                                <field name="product_id"/>
                                <field name="product_uom_qty"/>
                                <field name="price_unit"/>
                                <field name="price_subtotal"/>
                            </list>
                        </field>
                    </page>


                </xpath>

            </field>
        </record>

        <record id="inh_crm_lead_view_list" model="ir.ui.view">
            <field name="name">crm.lead</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='priority']" position="after">
                    <field name="business_type" optional="hide"/>
                    <field name="manufacturing_industry_id" optional="hide"/>
                    <field name="lead_code" optional="hide"/>
                    <field name="approach_date" optional="hide"/>
                    <field name="product_id" optional="hide"/>
                    <field name="required_tonnage" optional="hide"/>
                    <field name="is_potential" optional="hide"/>
                    <field name="description" optional="hide"/>

                </xpath>
            </field>
        </record>


    </data>
</odoo>